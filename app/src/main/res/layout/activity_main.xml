<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/resultBackground"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/button3"
        android:layout_width="@dimen/buttonHW"
        android:layout_height="@dimen/buttonHW"
        android:layout_marginStart="20dp"
        android:layout_marginTop="@dimen/buttonTop"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultBackground" />
    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/buttonHW"
        android:layout_height="@dimen/buttonHW"
        android:layout_marginStart="@dimen/buttonLeft"
        android:layout_marginTop="@dimen/buttonTop"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/resultBackground" />

    <Button
        android:id="@+id/button5"
        android:layout_width="@dimen/buttonHW"
        android:layout_height="@dimen/buttonHW"
        android:layout_marginStart="@dimen/buttonLeft"
        android:layout_marginTop="@dimen/buttonTop"
        android:layout_marginEnd="30dp"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/resultBackground" />

    <Button
        android:id="@+id/button6"
        android:layout_width="@dimen/buttonHW"
        android:layout_height="@dimen/buttonHW"
        android:layout_marginTop="@dimen/buttonTop"
        android:layout_marginEnd="20dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultBackground" />

    <Button
        android:id="@+id/button7"
        android:layout_width="@dimen/buttonHW"
        android:layout_height="@dimen/buttonHW"
        android:layout_marginTop="@dimen/rightButtonTop"
        android:layout_marginEnd="@dimen/rightButtonLeft"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button8"
        android:layout_width="@dimen/buttonHW"
        android:layout_height="@dimen/buttonHW"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

</androidx.constraintlayout.widget.ConstraintLayout>